        <StackPanel HorizontalAlignment="Center"  Width="480">
            <my:AdControl AdUnitId="10069326" ApplicationId="9159b9a0-d8a7-4588-a88c-a09ad25c9327" Height="80" Name="adControl1" Width="480" />
        </StackPanel>
    </Grid>

